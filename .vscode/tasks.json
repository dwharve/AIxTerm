{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "../.venv/bin/python",
            "args": ["-m", "pytest", "tests/", "-v"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "../.venv/bin/python",
            "args": ["-m", "pytest", "tests/", "--cov=aixterm", "--cov-report=html", "--cov-report=term"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Linting",
            "type": "shell",
            "command": "../.venv/bin/python",
            "args": ["-m", "flake8", "aixterm/", "tests/", "--max-line-length=88", "--ignore=E203,W503"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "../.venv/bin/python",
            "args": ["-m", "black", "aixterm/", "tests/"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Package",
            "type": "shell",
            "command": "../.venv/bin/python",
            "args": ["-m", "build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
